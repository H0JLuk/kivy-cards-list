ScreenManagement:
  id: sm

  CardListScreen:
    name: 'card_list_screen'
    manager: 'screen_manager'

  CardItemScreen:
    name: 'card_item_screen'
    manager: 'screen_manager'

<Header>
  md_bg_color: 'tomato'

  BoxLayout:
    orientation: 'vertical'
    padding: ['24dp', '24dp']
    spacing: '24dp'

    Label:
      text: 'Посты'
      bold: True
      font_style: 'H4'
      adaptive_height: True
      padding_x: '24dp'

<CardListScreen>:
  id: CardListScreen
  BoxLayout:
    orientation: "vertical"

    Label:
      text: 'card list 2'

    ScrollView:
      id: scrollable_list
      padding: '24dp'
      spacing: '24dp'
      
      # CardListItem:
      # ListView:

<CardItemScreen>:
  BoxLayout:
    orientation: "vertical"
    Label:
      text: 'Card item screen'

<CardListItem>
